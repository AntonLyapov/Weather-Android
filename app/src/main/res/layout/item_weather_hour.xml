<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_weather_weather_hour_item_margin"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/activity_weather_weather_hour_item_padding">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_weather_weather_hour_item_hour_text_size" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/activity_weather_weather_hour_item_icon_size"
            android:layout_height="@dimen/activity_weather_weather_hour_item_icon_size"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_weather_weather_hour_item_description_text_size"
            android:textStyle="bold" />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>